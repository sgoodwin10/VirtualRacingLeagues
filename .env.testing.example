APP_NAME="Virtual Racing Leagues - Testing"
APP_ENV=testing
APP_KEY=
APP_DEBUG=true
APP_TIMEZONE=UTC
APP_URL=http://virtualracingleagues.localhost
APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US
APP_MAINTENANCE_DRIVER=file
APP_MAINTENANCE_STORE=database

# Database - MariaDB for integration tests
DB_CONNECTION=testing
DB_HOST=mariadb
DB_PORT=3306
DB_TEST_DATABASE=virtualracingleagues_test
DB_USERNAME=laravel
DB_PASSWORD=secret

# Performance optimizations for tests
BCRYPT_ROUNDS=4
CACHE_STORE=array
MAIL_MAILER=array
QUEUE_CONNECTION=sync
SESSION_DRIVER=array

# Disable unnecessary services
PULSE_ENABLED=false
TELESCOPE_ENABLED=false
SCOUT_DRIVER=null

# Session configuration
SESSION_DOMAIN=.virtualracingleagues.localhost
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_SAME_SITE=lax

# Redis (not used in tests due to array drivers, but included for completeness)
REDIS_CLIENT=phpredis
REDIS_HOST=redis
REDIS_PASSWORD=null
REDIS_PORT=6379

# Cache
CACHE_PREFIX=

# Elasticsearch (disabled for tests)
ELASTICSEARCH_HOST=elasticsearch
ELASTICSEARCH_PORT=9200
ELASTICSEARCH_SCHEME=http
ELASTICSEARCH_USER=
ELASTICSEARCH_PASS=

# Mail (array driver for tests)
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

# AWS (not used in tests)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# Vite
VITE_APP_NAME="${APP_NAME}"
VITE_APP_URL="${APP_URL}"
VITE_APP_DOMAIN=app.virtualracingleagues.localhost
