{
    "$schema": "https://json.schemastore.org/package.json",
    "private": true,
    "type": "module",
    "scripts": {
        "setup": "node scripts/setup-boilerplate.js",
        "dev": "vite",
        "build": "vue-tsc && vite build",
        "build:only": "vite build",
        "preview": "vite preview",
        "type-check": "vue-tsc --noEmit",
        "test": "vitest",
        "test:ui": "vitest --ui",
        "test:coverage": "vitest --coverage",
        "test:public": "vitest resources/public",
        "test:user": "vitest resources/user",
        "test:admin": "vitest resources/admin",
        "test:e2e": "playwright test",
        "test:e2e:admin": "playwright test tests/Browser/admin",
        "test:e2e:public": "playwright test tests/Browser/public",
        "test:e2e:user": "playwright test tests/Browser/user",
        "test:e2e:ui": "playwright test --ui",
        "test:e2e:headed": "playwright test --headed",
        "test:e2e:report": "playwright show-report",
        "lint": "eslint resources/public resources/user resources/admin",
        "lint:fix": "eslint resources/public resources/user resources/admin --fix",
        "lint:public": "eslint resources/public",
        "lint:user": "eslint resources/user",
        "lint:admin": "eslint resources/admin",
        "format": "prettier --write \"resources/{public,user,admin}/**/*.{js,ts,vue}\"",
        "format:public": "prettier --write \"resources/public/**/*.{js,ts,vue}\"",
        "format:user": "prettier --write \"resources/user/**/*.{js,ts,vue}\"",
        "format:admin": "prettier --write \"resources/admin/**/*.{js,ts,vue}\"",
        "cleanup": "bash scripts/cleanup.sh",
        "update": "bash scripts/update-boilerplate.sh"
    },
    "devDependencies": {
        "@eslint/js": "^9.37.0",
        "@faker-js/faker": "^10.1.0",
        "@playwright/test": "^1.56.0",
        "@tailwindcss/vite": "^4.0.0",
        "@testing-library/jest-dom": "^6.9.1",
        "@testing-library/user-event": "^14.6.1",
        "@testing-library/vue": "^8.1.0",
        "@types/node": "^24.7.1",
        "@vitejs/plugin-vue": "^6.0.1",
        "@vitest/coverage-v8": "^4.0.1",
        "@vitest/ui": "^4.0.1",
        "@vue/test-utils": "^2.4.6",
        "@vue/tsconfig": "^0.8.1",
        "axios": "^1.11.0",
        "concurrently": "^9.0.1",
        "eslint": "^9.37.0",
        "eslint-config-prettier": "^10.1.8",
        "eslint-plugin-prettier": "^5.5.4",
        "eslint-plugin-vue": "^10.5.0",
        "happy-dom": "^20.0.7",
        "jsdom": "^27.0.0",
        "laravel-vite-plugin": "^2.0.0",
        "msw": "^2.11.6",
        "prettier": "^3.6.2",
        "prettier-plugin-tailwindcss": "^0.7.1",
        "tailwindcss": "^4.0.0",
        "typescript": "^5.9.3",
        "typescript-eslint": "^8.46.1",
        "vite": "^7.0.7",
        "vitest": "^4.0.1",
        "vue-tsc": "^3.1.1"
    },
    "dependencies": {
        "@phosphor-icons/vue": "^2.2.1",
        "@primevue/themes": "^4.4.1",
        "@types/quill": "^2.0.14",
        "@vueuse/core": "^14.0.0",
        "date-fns": "^4.1.0",
        "pinia": "^3.0.3",
        "pinia-plugin-persistedstate": "^4.5.0",
        "primeicons": "^7.0.0",
        "primevue": "^4.4.1",
        "quill": "^2.0.3",
        "tailwindcss-primeui": "^0.6.1",
        "vue": "^3.5.22",
        "vue-router": "^4.5.1"
    }
}
